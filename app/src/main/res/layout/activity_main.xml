<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main Content Area -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Full Screen Map -->
        <org.maplibre.android.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Sidebar Buttons (Left) -->
        <LinearLayout
            android:id="@+id/sidebar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:clipToPadding="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageButton
                android:id="@+id/btnLocation"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/circle_button_bg"
                android:src="@drawable/ic_location"
                android:layout_marginBottom="8dp"
                android:contentDescription="My Location"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:elevation="4dp"
                app:tint="@color/icon_tint_selector" />

            <ImageButton
                android:id="@+id/btnRoutePlanning"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/circle_button_bg"
                android:src="@drawable/ic_route"
                android:layout_marginBottom="8dp"
                android:contentDescription="Route Planning"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:elevation="4dp"
                app:tint="@color/icon_tint_selector" />

            <ImageButton
                android:id="@+id/btnTeleport"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/circle_button_bg"
                android:src="@drawable/ic_teleport"
                android:layout_marginBottom="8dp"
                android:contentDescription="Teleport"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:elevation="4dp"
                app:tint="@color/icon_tint_selector" />

            <ImageButton
                android:id="@+id/btnFavorites"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/circle_button_bg"
                android:src="@drawable/ic_heart"
                android:layout_marginBottom="8dp"
                android:contentDescription="Favorites"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:elevation="4dp"
                app:tint="@color/icon_tint_selector" />

            <ImageButton
                android:id="@+id/btnShare"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/circle_button_bg"
                android:src="@drawable/ic_share"
                android:layout_marginBottom="8dp"
                android:contentDescription="Share"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:elevation="4dp"
                app:tint="@color/icon_tint_selector" />

            <ImageButton
                android:id="@+id/btnViewOrigin"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/circle_button_bg"
                android:src="@drawable/ic_eye"
                android:layout_marginBottom="8dp"
                android:contentDescription="View Origin"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:elevation="4dp"
                app:tint="@color/icon_tint_selector" />

            <ImageButton
                android:id="@+id/btnLock"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/circle_button_bg"
                android:src="@drawable/ic_lock"
                android:layout_marginBottom="8dp"
                android:contentDescription="Lock"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:elevation="4dp"
                app:tint="@color/icon_tint_selector" />

            <ImageButton
                android:id="@+id/btnWalkMenu"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/circle_button_bg"
                android:src="@drawable/ic_walk"
                android:layout_marginBottom="8dp"
                android:contentDescription="Walk Options"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:elevation="4dp"
                app:tint="@color/icon_tint_selector" />

        </LinearLayout>

        <!-- Walk Speed Options Panel (Hidden by default) -->
        <LinearLayout
            android:id="@+id/layoutWalkControls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/overlay_panel_bg"
            android:padding="4dp"
            android:visibility="gone"
            android:elevation="6dp"
            app:layout_constraintStart_toEndOf="@id/sidebar"
            app:layout_constraintBottom_toBottomOf="@id/sidebar"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp">

            <ImageButton
                android:id="@+id/btnWalkSpeed"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_directions_walk"
                android:contentDescription="Walk Speed"
                android:padding="8dp"
                android:scaleType="fitCenter"
                app:tint="@color/icon_tint_selector" />

            <ImageButton
                android:id="@+id/btnJogSpeed"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_directions_run"
                android:contentDescription="Jog Speed"
                android:padding="8dp"
                android:scaleType="fitCenter"
                app:tint="@color/icon_tint_selector" />

            <ImageButton
                android:id="@+id/btnRunSpeed"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_drive"
                android:contentDescription="Run Speed"
                android:padding="8dp"
                android:scaleType="fitCenter"
                app:tint="@color/icon_tint_selector" />

        </LinearLayout>

        <!-- Route Editor Overlay (Top Center) -->
        <LinearLayout
            android:id="@+id/layoutRouteEditor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/route_panel_bg"
            android:padding="16dp"
            android:visibility="gone"
            android:elevation="6dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="64dp"
            android:layout_marginEnd="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap Map to Add Route Points"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buttonSaveRoute"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/button_save_route"
                    android:textColor="@color/white"
                    android:background="@drawable/route_panel_btn_bg"
                    android:textAllCaps="false" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buttonUndoPoint"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/button_undo_point"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/white"
                    android:background="@drawable/route_panel_btn_bg"
                    android:textAllCaps="false" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buttonClearRoute"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/button_clear_route"
                    android:textColor="@color/white"
                    android:background="@drawable/route_panel_btn_bg"
                    android:textAllCaps="false" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnRouteEditorClose"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Close"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/white"
                    android:background="@drawable/route_panel_btn_bg"
                    android:textAllCaps="false" />
            </LinearLayout>
        </LinearLayout>

        <!-- Drawer/Settings Button -->
        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/circle_button_bg"
            android:src="@drawable/ic_settings"
            android:contentDescription="Settings"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:elevation="4dp"
            android:layout_marginTop="8dp"
            app:tint="@color/icon_tint_selector"
            app:layout_constraintTop_toBottomOf="@id/sidebar"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" />

        <!-- Joystick Overlay (Right) -->
        <FrameLayout
            android:id="@+id/joystickContainer"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="80dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <View
                android:id="@+id/joystickBase"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:background="@drawable/joystick_base" />

            <View
                android:id="@+id/joystickThumb"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/joystick_thumb" />

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Settings Sidebar (Drawer) -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/titleStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_status"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/slate_900" />

                <TextView
                    android:id="@+id/textStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/status_idle"
                    android:textSize="16sp"
                    android:textColor="@color/slate_700"
                    android:layout_marginTop="6dp" />

                <TextView
                    android:id="@+id/textError"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="@color/teal_700"
                    android:layout_marginTop="6dp" />

                <TextView
                    android:id="@+id/textPointCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Points: 0"
                    android:textSize="13sp"
                    android:textColor="@color/slate_700"
                    android:layout_marginTop="8dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/divider_light" />

                <TextView
                    android:id="@+id/labelSpeedMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_speed_mode"
                    android:textStyle="bold"
                    android:textColor="@color/slate_900"
                    android:layout_marginTop="10dp" />

                <Spinner
                    android:id="@+id/spinnerSpeedMode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/speed_modes" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp">

                    <EditText
                        android:id="@+id/editSpeedMin"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="numberDecimal"
                        android:hint="@string/hint_speed_min"
                        style="@style/Widget.MockGps.Input" />

                    <EditText
                        android:id="@+id/editSpeedMax"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="numberDecimal"
                        android:hint="@string/hint_speed_max"
                        android:layout_marginStart="8dp"
                        style="@style/Widget.MockGps.Input" />
                </LinearLayout>

                <TextView
                    android:id="@+id/labelSpeedPresets"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_speed_presets"
                    android:textStyle="bold"
                    android:textColor="@color/slate_900"
                    android:layout_marginTop="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <Button
                        android:id="@+id/buttonPresetWalk"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/button_preset_walk" />

                    <Button
                        android:id="@+id/buttonPresetJog"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/button_preset_jog"
                        android:layout_marginStart="6dp" />

                    <Button
                        android:id="@+id/buttonPresetDrive"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/button_preset_drive"
                        android:layout_marginStart="6dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/labelPauseRange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_pause_range"
                        android:textStyle="bold"
                        android:textColor="@color/slate_900" />

                    <ImageView
                        android:id="@+id/iconSpeedInfo"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginStart="6dp"
                        android:contentDescription="@string/content_info"
                        android:src="@android:drawable/ic_dialog_info" />

                    <ImageView
                        android:id="@+id/iconPauseInfo"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginStart="6dp"
                        android:contentDescription="@string/content_info"
                        android:src="@android:drawable/ic_dialog_info" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp">

                    <EditText
                        android:id="@+id/editPauseMin"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="numberDecimal"
                        android:hint="@string/hint_pause_min"
                        style="@style/Widget.MockGps.Input" />

                    <EditText
                        android:id="@+id/editPauseMax"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="numberDecimal"
                        android:hint="@string/hint_pause_max"
                        android:layout_marginStart="8dp"
                        style="@style/Widget.MockGps.Input" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <Button
                        android:id="@+id/buttonPresetPauseNone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/button_preset_pause_none" />

                    <Button
                        android:id="@+id/buttonPresetPauseShort"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/button_preset_pause_short"
                        android:layout_marginStart="6dp" />

                    <Button
                        android:id="@+id/buttonPresetPauseLong"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/button_preset_pause_long"
                        android:layout_marginStart="6dp" />
                </LinearLayout>

                <Button
                    android:id="@+id/buttonClearPause"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/button_clear_pause"
                    android:layout_marginTop="6dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <CheckBox
                        android:id="@+id/checkRandomSpeed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_random_speed" />

                    <CheckBox
                        android:id="@+id/checkLoop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_loop"
                        android:layout_marginStart="12dp" />

                    <CheckBox
                        android:id="@+id/checkRoundTrip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_roundtrip"
                        android:layout_marginStart="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp">

                    <CheckBox
                        android:id="@+id/checkDrift"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_drift_enabled" />

                    <CheckBox
                        android:id="@+id/checkBounce"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_bounce_enabled"
                        android:layout_marginStart="12dp" />

                    <CheckBox
                        android:id="@+id/checkSmoothing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_smoothing_enabled"
                        android:layout_marginStart="12dp" />
                </LinearLayout>

                <EditText
                    android:id="@+id/editDriftMeters"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:hint="@string/hint_drift_meters"
                    style="@style/Widget.MockGps.Input"
                    android:layout_marginTop="6dp" />

                <EditText
                    android:id="@+id/editBounceMeters"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:hint="@string/hint_bounce_meters"
                    style="@style/Widget.MockGps.Input"
                    android:layout_marginTop="6dp" />

                <EditText
                    android:id="@+id/editSmoothingAlpha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:hint="@string/hint_smoothing_alpha"
                    style="@style/Widget.MockGps.Input"
                    android:layout_marginTop="6dp" />

                <Button
                    android:id="@+id/buttonLocationSettings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/button_location_settings"
                    style="@style/Widget.MockGps.Button.Secondary"
                    android:layout_marginTop="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <Button
                        android:id="@+id/buttonStart"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/button_start"
                        style="@style/Widget.MockGps.Button.Primary" />

                    <Button
                        android:id="@+id/buttonPause"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/button_pause"
                        style="@style/Widget.MockGps.Button.Secondary"
                        android:layout_marginStart="8dp" />

                    <Button
                        android:id="@+id/buttonStop"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/button_stop"
                        style="@style/Widget.MockGps.Button.Primary"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <Button
                    android:id="@+id/buttonDevOptions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/button_dev_options"
                    style="@style/Widget.MockGps.Button.Primary"
                    android:layout_marginTop="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_route_library"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerRoutes"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="6dp" />

                <EditText
                    android:id="@+id/editFavoriteName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_favorite_name"
                    style="@style/Widget.MockGps.Input"
                    android:layout_marginTop="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp">

                    <Button
                        android:id="@+id/buttonAddFavorite"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/button_add_favorite"
                        style="@style/Widget.MockGps.Button.Primary" />

                    <Button
                        android:id="@+id/buttonDeleteFavorite"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/button_delete_favorite"
                        style="@style/Widget.MockGps.Button.Secondary"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerFavorites"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="6dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerHistory"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginTop="6dp" />

            </LinearLayout>
        </ScrollView>
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>