<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main Content Area -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Full Screen Map -->
        <org.maplibre.android.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Search Bar -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="6dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_max="500dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="4dp">

                <EditText
                    android:id="@+id/editSearch"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="æœå°‹åœ°å€æˆ–æ˜¯åº§æ¨™..."
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:nextFocusDown="@id/btnSearch" />

                <ImageButton
                    android:id="@+id/btnSearch"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_search"
                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    app:tint="@color/blue_500" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Sidebar Buttons (Left) -->
        <LinearLayout
            android:id="@+id/sidebar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:clipToPadding="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageButton
                android:id="@+id/btnLocation"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/circle_button_bg"
                android:src="@drawable/ic_location"
                android:layout_marginBottom="8dp"
                android:contentDescription="My Location"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:elevation="4dp"
                app:tint="@color/icon_tint_selector" />

            <ImageButton
                android:id="@+id/btnRoutePlanning"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/circle_button_bg"
                android:src="@drawable/ic_route"
                android:layout_marginBottom="8dp"
                android:contentDescription="Route Planning"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:elevation="4dp"
                app:tint="@color/icon_tint_selector" />

            <ImageButton
                android:id="@+id/btnTeleport"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/circle_button_bg"
                android:src="@drawable/ic_teleport"
                android:layout_marginBottom="8dp"
                android:contentDescription="Teleport"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:elevation="4dp"
                app:tint="@color/icon_tint_selector" />

            <ImageButton
                android:id="@+id/btnFavorites"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/circle_button_bg"
                android:src="@drawable/ic_heart"
                android:layout_marginBottom="8dp"
                android:contentDescription="Favorites"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:elevation="4dp"
                app:tint="@color/icon_tint_selector" />

            <ImageButton
                android:id="@+id/btnShare"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/circle_button_bg"
                android:src="@drawable/ic_share"
                android:layout_marginBottom="8dp"
                android:contentDescription="Share"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:elevation="4dp"
                app:tint="@color/icon_tint_selector" />

            <ImageButton
                android:id="@+id/btnViewOrigin"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/circle_button_bg"
                android:src="@drawable/ic_eye"
                android:layout_marginBottom="8dp"
                android:contentDescription="View Origin"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:elevation="4dp"
                app:tint="@color/icon_tint_selector" />

            <ImageButton
                android:id="@+id/btnLock"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/circle_button_bg"
                android:src="@drawable/ic_lock"
                android:layout_marginBottom="8dp"
                android:contentDescription="Lock"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:elevation="4dp"
                app:tint="@color/icon_tint_selector" />

            <ImageButton
                android:id="@+id/btnWalkMenu"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/circle_button_bg"
                android:src="@drawable/ic_walk"
                android:layout_marginBottom="8dp"
                android:contentDescription="Walk Options"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:elevation="4dp"
                app:tint="@color/icon_tint_selector" />

        </LinearLayout>

        <!-- Walk Speed Options Panel (Hidden by default) -->
        <LinearLayout
            android:id="@+id/layoutWalkControls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/overlay_panel_bg"
            android:padding="4dp"
            android:visibility="gone"
            android:elevation="6dp"
            app:layout_constraintStart_toEndOf="@id/sidebar"
            app:layout_constraintBottom_toBottomOf="@id/sidebar"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp">

            <ImageButton
                android:id="@+id/btnWalkSpeed"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_directions_walk"
                android:contentDescription="Walk Speed"
                android:padding="8dp"
                android:scaleType="fitCenter"
                app:tint="@color/icon_tint_selector" />

            <ImageButton
                android:id="@+id/btnJogSpeed"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_directions_run"
                android:contentDescription="Jog Speed"
                android:padding="8dp"
                android:scaleType="fitCenter"
                app:tint="@color/icon_tint_selector" />

            <ImageButton
                android:id="@+id/btnRunSpeed"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_drive"
                android:contentDescription="Run Speed"
                android:padding="8dp"
                android:scaleType="fitCenter"
                app:tint="@color/icon_tint_selector" />

        </LinearLayout>

        <!-- Route Editor Overlay (Bottom CardView) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/layoutRouteEditor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/layoutPlaybackStats"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/instructions_route_edit"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/slate_900"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/textRouteStats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ 0 é»ž | ðŸ“ 0 m"
                    android:textSize="12sp"
                    android:textColor="@color/slate_500"
                    android:gravity="center"
                    android:layout_marginBottom="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="5"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/buttonLoadRoute"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_route"
                        android:padding="12dp"
                        android:scaleType="fitCenter"
                        app:tint="@color/slate_700"
                        android:contentDescription="@string/button_load_route_to_map" />

                    <ImageButton
                        android:id="@+id/buttonSaveRoute"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_heart"
                        android:padding="12dp"
                        android:scaleType="fitCenter"
                        app:tint="@color/slate_700"
                        android:contentDescription="@string/button_save_route" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonStartRoute"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="@string/button_start"
                        android:layout_marginHorizontal="4dp"
                        app:backgroundTint="@color/blue_500" />

                    <ImageButton
                        android:id="@+id/buttonUndoPoint"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_back"
                        android:padding="12dp"
                        android:scaleType="fitCenter"
                        app:tint="@color/slate_700"
                        android:contentDescription="@string/button_undo_point" />
                    
                    <ImageButton
                        android:id="@+id/buttonClearRoute"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_delete"
                        android:padding="12dp"
                        android:scaleType="fitCenter"
                        app:tint="@color/red_500"
                        android:contentDescription="@string/button_clear_route" />

                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRouteEditorClose"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/button_cancel"
                    android:textColor="@color/slate_500"
                    android:layout_gravity="end"
                    android:layout_marginTop="0dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Playback Stats Bar (Bottom) -->
        <LinearLayout
            android:id="@+id/layoutPlaybackStats"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#CC10B981"
            android:padding="10dp"
            android:gravity="center"
            android:visibility="gone"
            android:elevation="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/textPlaybackDistance"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="0 / 0 m"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/textPlaybackTime"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="00:00 / 00:00"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/textPlaybackSpeed"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="0.0 km/h"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:gravity="center"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#40FFFFFF"
                android:layout_marginHorizontal="8dp"/>

            <ImageButton
                android:id="@+id/btnPlaybackPause"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_pause"
                android:scaleType="fitCenter"
                android:padding="4dp"
                app:tint="@color/white"
                android:contentDescription="@string/button_pause" />

            <ImageButton
                android:id="@+id/btnPlaybackStop"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_stop"
                android:scaleType="fitCenter"
                android:padding="4dp"
                android:layout_marginStart="8dp"
                app:tint="@color/white"
                android:contentDescription="@string/button_stop" />
        </LinearLayout>

        <!-- Drawer/Settings Button -->
        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/circle_button_bg"
            android:src="@drawable/ic_settings"
            android:contentDescription="Settings"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:elevation="4dp"
            android:layout_marginTop="8dp"
            app:tint="@color/icon_tint_selector"
            app:layout_constraintTop_toBottomOf="@id/sidebar"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" />

        <!-- Joystick Overlay (Right) -->
        <FrameLayout
            android:id="@+id/joystickContainer"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="80dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <View
                android:id="@+id/joystickBase"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:background="@drawable/joystick_base" />

            <View
                android:id="@+id/joystickThumb"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/joystick_thumb" />

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Settings Sidebar (Drawer) -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/slate_50">

            <!-- Drawer Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@color/slate_900"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="bottom">
                
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@mipmap/ic_launcher_round"
                    android:layout_marginBottom="16dp" />
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ä»Šå¤©çš„æˆ‘ä¸å¤ªæƒ³å‹• :)"
                    android:textColor="#B0FFFFFF"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Navigation Menu -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="8dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/menuHome"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="@string/label_home"
                    android:gravity="start|center_vertical"
                    android:paddingStart="16dp"
                    android:textColor="@color/slate_900"
                    app:icon="@drawable/ic_location"
                    app:iconTint="@color/slate_900" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/menuHistory"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="@string/label_history"
                    android:gravity="start|center_vertical"
                    android:paddingStart="16dp"
                    android:textColor="@color/slate_900"
                    app:icon="@drawable/ic_play"
                    app:iconTint="@color/slate_900" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/menuRouteList"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="@string/title_route_list"
                    android:gravity="start|center_vertical"
                    android:paddingStart="16dp"
                    android:textColor="@color/slate_900"
                    app:icon="@drawable/ic_route"
                    app:iconTint="@color/slate_900" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/menuFavorites"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="@string/label_favorites"
                    android:gravity="start|center_vertical"
                    android:paddingStart="16dp"
                    android:textColor="@color/slate_900"
                    app:icon="@drawable/ic_heart"
                    app:iconTint="@color/slate_900" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="8dp"
                    android:background="@color/divider_light" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/menuSettings"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="@string/label_settings"
                    android:gravity="start|center_vertical"
                    android:paddingStart="16dp"
                    android:textColor="@color/slate_900"
                    app:icon="@drawable/ic_settings"
                    app:iconTint="@color/slate_900" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/menuDevOptions"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="@string/button_dev_options"
                    android:gravity="start|center_vertical"
                    android:paddingStart="16dp"
                    android:textColor="@color/slate_900"
                    app:icon="@drawable/ic_lock"
                    app:iconTint="@color/slate_900" />

            </LinearLayout>

            <!-- Status Info at Bottom -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/slate_100">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_current_state"
                        android:textSize="12sp"
                        android:textColor="@color/slate_400" />
                    
                    <TextView
                        android:id="@+id/textStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/status_idle"
                        android:textSize="16sp"
                        android:textColor="@color/slate_800"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>