<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sand_50">

    <LinearLayout
        android:id="@+id/topPanel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/titleStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_status"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/slate_900" />

        <TextView
            android:id="@+id/textStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/status_idle"
            android:textSize="16sp"
            android:textColor="@color/slate_700"
            android:layout_marginTop="6dp" />

        <TextView
            android:id="@+id/textError"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:textColor="@color/teal_700"
            android:layout_marginTop="6dp" />

        <TextView
            android:id="@+id/textInstructions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/instructions"
            android:textSize="14sp"
            android:textColor="@color/slate_700"
            android:layout_marginTop="12dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/divider_light" />

        <TextView
            android:id="@+id/textPointCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Points: 0"
            android:textSize="13sp"
            android:textColor="@color/slate_700"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/textMapTip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/hint_remove_point"
            android:textSize="12sp"
            android:textColor="@color/slate_700"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/textMapTipDrag"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/hint_drag_point"
            android:textSize="12sp"
            android:textColor="@color/slate_700"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/labelSpeedMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_speed_mode"
            android:textStyle="bold"
            android:textColor="@color/slate_900"
            android:layout_marginTop="10dp" />

        <Spinner
            android:id="@+id/spinnerSpeedMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/speed_modes" />

        <TextView
            android:id="@+id/labelSpeedPresets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_speed_presets"
            android:textStyle="bold"
            android:textColor="@color/slate_900"
            android:layout_marginTop="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <Button
                android:id="@+id/buttonPresetWalk"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_preset_walk" />

            <Button
                android:id="@+id/buttonPresetJog"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_preset_jog"
                android:layout_marginStart="6dp" />

            <Button
                android:id="@+id/buttonPresetDrive"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_preset_drive"
                android:layout_marginStart="6dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/labelSpeedRange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_speed_range"
                android:textStyle="bold"
                android:textColor="@color/slate_900" />

            <ImageView
                android:id="@+id/iconSpeedInfo"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginStart="6dp"
                android:contentDescription="@string/content_info"
                android:src="@android:drawable/ic_dialog_info" />
        </LinearLayout>

        <TextView
            android:id="@+id/textSpeedHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hint_optional"
            android:textSize="12sp"
            android:textColor="@color/slate_700"
            android:layout_marginTop="2dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">

        <EditText
            android:id="@+id/editSpeedMin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:inputType="numberDecimal"
            android:hint="@string/hint_speed_min"
            style="@style/Widget.MockGps.Input" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/unit_kmh"
                android:layout_marginStart="4dp"
                android:layout_gravity="center_vertical" />

        <EditText
            android:id="@+id/editSpeedMax"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:inputType="numberDecimal"
            android:hint="@string/hint_speed_max"
            android:layout_marginStart="8dp"
            style="@style/Widget.MockGps.Input" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/unit_kmh"
                android:layout_marginStart="4dp"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <TextView
            android:id="@+id/textSpeedRangeHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hint_speed_valid"
            android:textSize="11sp"
            android:textColor="@color/slate_700"
            android:layout_marginTop="2dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/labelPauseRange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_pause_range"
                android:textStyle="bold"
                android:textColor="@color/slate_900" />

            <ImageView
                android:id="@+id/iconPauseInfo"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginStart="6dp"
                android:contentDescription="@string/content_info"
                android:src="@android:drawable/ic_dialog_info" />
        </LinearLayout>

        <TextView
            android:id="@+id/labelPausePresets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_pause_presets"
            android:textStyle="bold"
            android:textColor="@color/slate_900"
            android:layout_marginTop="6dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <Button
                android:id="@+id/buttonPresetPauseNone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_preset_pause_none" />

            <Button
                android:id="@+id/buttonPresetPauseShort"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_preset_pause_short"
                android:layout_marginStart="6dp" />

            <Button
                android:id="@+id/buttonPresetPauseLong"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_preset_pause_long"
                android:layout_marginStart="6dp" />
        </LinearLayout>
        <TextView
            android:id="@+id/textPauseHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hint_optional"
            android:textSize="12sp"
            android:textColor="@color/slate_700"
            android:layout_marginTop="2dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">

        <EditText
            android:id="@+id/editPauseMin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:inputType="numberDecimal"
            android:hint="@string/hint_pause_min"
            style="@style/Widget.MockGps.Input" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/unit_sec"
                android:layout_marginStart="4dp"
                android:layout_gravity="center_vertical" />

        <EditText
            android:id="@+id/editPauseMax"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:inputType="numberDecimal"
            android:hint="@string/hint_pause_max"
            android:layout_marginStart="8dp"
            style="@style/Widget.MockGps.Input" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/unit_sec"
                android:layout_marginStart="4dp"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <TextView
            android:id="@+id/textPauseRangeHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hint_pause_valid"
            android:textSize="11sp"
            android:textColor="@color/slate_700"
            android:layout_marginTop="2dp" />

        <Button
            android:id="@+id/buttonClearPause"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_clear_pause"
            android:layout_marginTop="6dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <CheckBox
                android:id="@+id/checkRandomSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_random_speed" />

            <CheckBox
                android:id="@+id/checkLoop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_loop"
                android:layout_marginStart="12dp" />

            <CheckBox
                android:id="@+id/checkRoundTrip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_roundtrip"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/labelM4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_realism"
            android:textStyle="bold"
            android:textColor="@color/slate_900"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">

            <CheckBox
                android:id="@+id/checkDrift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_drift_enabled" />

            <CheckBox
                android:id="@+id/checkBounce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_bounce_enabled"
                android:layout_marginStart="12dp" />

            <CheckBox
                android:id="@+id/checkSmoothing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_smoothing_enabled"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">

        <EditText
            android:id="@+id/editDriftMeters"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="numberDecimal"
            android:hint="@string/hint_drift_meters"
            style="@style/Widget.MockGps.Input" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_drift_meters"
                android:layout_marginStart="6dp"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">

        <EditText
            android:id="@+id/editBounceMeters"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="numberDecimal"
            android:hint="@string/hint_bounce_meters"
            style="@style/Widget.MockGps.Input" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_bounce_meters"
                android:layout_marginStart="6dp"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">

        <EditText
            android:id="@+id/editSmoothingAlpha"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="numberDecimal"
            android:hint="@string/hint_smoothing_alpha"
            style="@style/Widget.MockGps.Input" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_smoothing_alpha"
                android:layout_marginStart="6dp"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <Button
            android:id="@+id/buttonDevOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_dev_options"
            style="@style/Widget.MockGps.Button.Primary"
            android:layout_marginTop="12dp" />

        <Button
            android:id="@+id/buttonLocationSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_location_settings"
            style="@style/Widget.MockGps.Button.Secondary"
            android:layout_marginTop="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/buttonStart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_start"
                style="@style/Widget.MockGps.Button.Primary" />

            <Button
                android:id="@+id/buttonPause"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_pause"
                style="@style/Widget.MockGps.Button.Secondary"
                android:layout_marginStart="8dp" />

            <Button
                android:id="@+id/buttonStop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_stop"
                style="@style/Widget.MockGps.Button.Primary"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/mapCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        style="@style/Widget.MockGps.Card"
        app:layout_constraintTop_toBottomOf="@id/topPanel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomPanel">

        <org.maplibre.android.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/bottomPanel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/sand_50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/editRouteName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/route_name_hint"
            style="@style/Widget.MockGps.Input" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/buttonSaveRoute"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_save_route"
                style="@style/Widget.MockGps.Button.Primary" />

            <Button
                android:id="@+id/buttonClearRoute"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_clear_route"
                style="@style/Widget.MockGps.Button.Secondary"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <Button
            android:id="@+id/buttonUndoPoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_undo_point"
            style="@style/Widget.MockGps.Button.Secondary"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/buttonRenameRoute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_rename_route"
            style="@style/Widget.MockGps.Button.Secondary"
            android:layout_marginTop="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/buttonImportRoute"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_import_route"
                style="@style/Widget.MockGps.Button.Secondary" />

            <Button
                android:id="@+id/buttonExportRoute"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_export_route"
                style="@style/Widget.MockGps.Button.Primary"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <Button
            android:id="@+id/buttonExportRouteKml"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_export_route_kml"
            style="@style/Widget.MockGps.Button.Secondary"
            android:layout_marginTop="6dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_route_library"
            android:textStyle="bold"
            android:layout_marginTop="12dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerRoutes"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginTop="6dp" />

        <Button
            android:id="@+id/buttonDeleteRoute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_delete_route"
            style="@style/Widget.MockGps.Button.Primary"
            android:layout_marginTop="8dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            style="@style/Widget.MockGps.Card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/labelFavorites"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_favorites"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editFavoriteName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_favorite_name"
                    style="@style/Widget.MockGps.Input"
                    android:layout_marginTop="6dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp">

                    <Button
                        android:id="@+id/buttonAddFavorite"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/button_add_favorite"
                        style="@style/Widget.MockGps.Button.Primary" />

                    <Button
                        android:id="@+id/buttonDeleteFavorite"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/button_delete_favorite"
                        style="@style/Widget.MockGps.Button.Secondary"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerFavorites"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="6dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            style="@style/Widget.MockGps.Card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/labelHistory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_history"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerHistory"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginTop="6dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
