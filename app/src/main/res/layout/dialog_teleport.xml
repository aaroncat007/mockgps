<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:id="@+id/textTeleportTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="傳送地點設定 (Teleport)"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/labelCoords"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="目標座標 (緯度, 經度)"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textTeleportTitle" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutCoordsInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnPaste"
            app:layout_constraintTop_toBottomOf="@id/labelCoords">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editCoords"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="例如: 25.0339, 121.5644"
                android:inputType="text"
                android:padding="12dp"
                android:textColor="@color/black" />
        </com.google.android.material.textfield.TextInputLayout>

        <ImageButton
            android:id="@+id/btnPaste"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_paste"
            android:padding="12dp"
            android:scaleType="fitCenter"
            app:tint="@color/blue_500"
            app:layout_constraintBottom_toBottomOf="@id/layoutCoordsInput"
            app:layout_constraintTop_toTopOf="@id/layoutCoordsInput"
            app:layout_constraintEnd_toStartOf="@id/btnTeleportAddFavorite"/>

        <ImageButton
            android:id="@+id/btnTeleportAddFavorite"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_heart"
            android:padding="12dp"
            android:scaleType="fitCenter"
            app:tint="@color/red_500"
            android:contentDescription="加入最愛"
            app:layout_constraintBottom_toBottomOf="@id/layoutCoordsInput"
            app:layout_constraintTop_toTopOf="@id/layoutCoordsInput"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/checkWalkMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="以步行模式前往目標 (Walk Mode)"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutCoordsInput" />

        <TextView
            android:id="@+id/textDistanceStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="距離計算中..."
            android:textColor="@android:color/holo_red_dark"
            android:textSize="12sp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/checkWalkMode" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end|center_vertical"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textDistanceStatus">


            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消"
                android:textColor="#888888"
                style="@style/Widget.AppCompat.Button.Borderless" />

            <Button
                android:id="@+id/btnTeleportAction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="前往 (GO)"
                android:layout_marginStart="8dp"
                android:backgroundTint="@color/blue_500"
                android:paddingHorizontal="24dp"
                android:textColor="@color/white" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
